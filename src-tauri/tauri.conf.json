{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Port Manager",
  "version": "0.1.0",
  "identifier": "com.portmanager.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Port Manager",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI1RjQ2RThDQzVGMzM2RDUKUldUVk52UEZqRzcwdFc3dStCS2IxeDBQdFZUQXN6S2tFNDNVZjZIUUZhanJtcW5FMjUyV1pNK0gK",
      "endpoints": [
        "https://github.com/clemane/port-manager/releases/latest/download/latest.json"
      ]
    }
  }
}
